@model TravelPackage.Models.WebInquiryForm

@{
    ViewBag.Title = "RequestQuote";
    var product = ViewBag.product;
}

@if (Model.Status == "QUOTE")
{
<h2>Requesting for Price Quotation</h2>
}
@if (Model.Status == "BOOK")
{
    <h2>Requesting for Service Booking</h2>
}

<div>
    <h4>Selected Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @product.Name
        </dd>

        <dt>
            Description
        </dt>
        <dd>
            @product.ShortRemarks
        </dd>

        <dt>
            img path
        </dt>
        <dd>
            @product.PgFeatureImg
        </dd>

    </dl>
</div>

<div>
    <h4>Guest Details</h4>
