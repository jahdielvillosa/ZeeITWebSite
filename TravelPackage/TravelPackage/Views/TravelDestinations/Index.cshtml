@model IEnumerable<TravelPackage.Models.tpAreas>

@{
    ViewBag.Title = "Travel Package Destinations";
    ViewBag.metaTitle = "Philippine Destinations Package|Tour|Travel|Vacation ";
}

<h2>Travel Destinations</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageRemarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageView)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sort)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageRemarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageView)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sort)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |  
            @Html.ActionLink("GO TO " + @item.Name + " >>", "Destination", "Home", new { id = @item.Id, AreaName = @item.Name }, null )
        </td>
    </tr>
}

</table>
